.mat-nav-list {
  .mat-date-icon {
    position: relative;

    span {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      margin-top: 2px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-family: Roboto, 'Helvetica Neue', sans-serif;
      font-size: 13px;
      font-weight: bold;
    }
  }

  .mat-list-item-selected {
    background: rgba(0, 0, 0, .12);
  }

  .sidenav-expansion-panel-header {
    padding-left: 16px;

    .sidenav-expansion-panel-header-content {
      display: flex;
      flex-direction: row;
      align-items: center;

      mat-icon {
        padding: 4px;
      }

      span {
        font-size: 16px;
        padding-left: 16px;
      }
    }
  }
}
